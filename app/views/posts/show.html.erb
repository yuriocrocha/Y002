
  <div class="container">
    <div class="row">
      <div class="col-lg-8">
        <h1 class="mt-4"><%= @post.title %></h1>
        <p class="lead">
          by
          <a href="#">Name</a>
        </p>
        <hr>
        <p><%= post_date @post.date %></p>
        <hr>
        <%= image_tag(@post.image_url.to_s, size: "900x300", :class => "img-fluid rounded") %>
        <hr>
        <p align="justify"><%= @post.content %>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ut, tenetur natus doloremque laborum quos iste ipsum rerum obcaecati impedit odit illo dolorum ab tempora nihil dicta earum fugiat. Temporibus, voluptatibus.</p>
        <hr>
        <div class="card my-4">
          <h5 class="card-header">Leave a Comment:</h5>
          <div class="card-body">
            <%= form_for([@post, @post.comments.build]) do |f| %>
            <div class="field">
    <%= f.text_field :autor, size: 20 , class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content , class: 'form-control' %>
  </div>
  <div class="actions">
    <%= f.submit 'Submit', :class => 'btn btn-primary' %>
  </div>
            <% end %>
          </div>
        </div>
<h2>Comments</h2>
<% @post.comments.each do |comment| %>
<div class="media mb-4">
          <div class="media-body">
            <h5 class="mt-0"><%= comment.autor %></h5>
           <%= comment.content %>
          </div>
        </div>
<!--<%= link_to 'Apagar Comentario', [comment.post, comment],
               :confirm => 'Tem certeza?',
               :method => :delete %>-->
<% end %>
      </div>
    </div>
  </div>
<%
  if session[:user_id]
    link_to 'Edit', edit_post_path(@post)
    puts "|"
end
  %>
<%= link_to 'Back', :back %>

